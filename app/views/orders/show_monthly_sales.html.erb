<%= render partial:"users/sidebar" %>
<div class="alignment">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h5 class"panel-title">Monthly Sales Report</h5>
    </div>
    <div class="panel-body">
      <table  class="table table-striped table-bordered table-condensed">
          <% @orders_month.sort.each do |month, orders| %>
            <thead>
              <tr>
                <th colspan="4"><%= month.strftime('%B - %Y') %></th>
              </tr>
              <tr>
                <th>Date</th>
                <th>Order Id</th>
                <th>User Id</th>
                <th>Total amount</th>
              </tr>
            </thead>
            <tbody>
              <% orders.each do |order|%>
                <tr>
                <td><%=order.created_at.strftime("%d %b %y")%></td>
                <td><%=order.id%></td>
                <td><%=order.user_id%></td>
                <td><%=Orderdetail.payable_amount(order)%></td>
                </tr>
              <%end%>
              <tr>
                <th colspan="4">Total Sales Of <%= month.strftime('%B') %> is  <%=Orderdetail.total_sales(orders)%></th>
              </tr>
            </tbody>
          <%end%>  
      </table>
    </div>
  </div>
</div>
