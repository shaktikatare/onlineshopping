<%= render partial:"users/sidebar" %>
<div class="alignment">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h5 class="panel-title">Categories</h5>
    </div>
    <div class="panel-body">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Category Name</th>
          <th>Delete</th>
          <th>Edit</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |c|%>
          <tr>
            <td><lable><%=c.name%></lable></td>     
            <td><%= link_to "Delete", category_path(c), method: :delete, class: "btn btn-danger"%></td>
            <td><%= link_to "edit",  edit_category_path(c),method: :get, class: "btn btn-warning"%></td>
          </tr>
        <%end%>
      </tbody>
    </table>
    </div>
  </div>
</div>

