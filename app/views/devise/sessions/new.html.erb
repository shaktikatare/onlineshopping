<%= render partial:"users/sidebar"%>
<div class="alignment">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h5 class="panel-title">SignIn</h5>
      
    </div>
    <div class="panel-body">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div id="form_error">
        </div>
        <div>
          <%= f.email_field :email, :autofocus => true, :placeholder => "Email" %>
        </div>

        <div>
          <%= f.password_field :password, :placeholder => "Password" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div>
            <%= f.check_box :remember_me %> <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div>
          <%= f.submit "Sign in", class:"btn btn-primary", onclick:"return validate_form();" %>
          <a href=<%=user_omniauth_authorize_path(:facebook)%> >
            <img src='/assets/facebookButt.jpg'>
          </a>
         <a href=<%=user_omniauth_authorize_path(:google_oauth2)%> >
           <img src='/assets/googleButt.jpg'>
         </a>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>  
</div>

<script>
  function validate_form()
  { 
   if($("#user_email").val() == "" && $("#user_password").val() == "")
    {
      $("#form_error").text("All fields are compulsory").fadeIn(1000).fadeOut(6000);
     return false;
    }
    return true;
  }
</script>
