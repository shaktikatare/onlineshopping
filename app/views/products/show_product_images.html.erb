<%= render partial:"users/sidebar"%>
<div class="alignment">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h5 class="panel-title">Produc Images</h5>
    </div>        
    <div class="panel-body">
      <table id="table" class="table table-striped table-bordered table-condensed">
        <thead>
        <tr>
          <th>Image</th>
          <th>Remove Image</th>
        </tr>
        </thead>
        <tbody>
          <ul class="products">
            <% @product.pictures.each do |p|%>
              
                <tr>
                <th><%= image_tag(p.image,:size => "166x194")%></th>
                <th><%=link_to "Remove Image" , remove_product_image_products_path(:id=>p.id), class:"btn btn-danger" %></th>
                </tr>
              
            <% end %>
          </ul>
        </tbody>  
      </table>
    </div> 
  </div>  
</div>     

