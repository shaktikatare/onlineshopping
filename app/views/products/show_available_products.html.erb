<%- model_class = Product -%>
<% if current_user.is_admin %>
  <%= render partial:"users/sidebar" %>
  <div class="alignment">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h5 class="panel-title">Available Products<h5>
      </div>
      <div class="panel-body">
      <table class="table table-striped table-bordered table-condensed">
        <thead>
        <tr>
          <th>Product Name</th>
          <th>Category Name</th>
          <th>Change Availability</th>
          <th>Edit</th>
          <th>Images</th>
        </tr>
        </thead>
        <tbody> 
        <% @category.each do |c| %>
          <% c.products.available.each do |p| %>
            <tr>
              <td><lable><%= p.name%></lable></td>
              <td><lable><%= c.name%></lable></td>
              <td><%= link_to "change", change_availability_products_path(:id=>p), class: "btn btn-danger"%></td>
              <td><%= link_to "Edit", edit_product_path(p),method: :get, class: "btn btn-warning"%></td>
              <td><%= link_to "Images", show_product_images_products_path(:id=>p.id),method: :get, class: "btn btn-info"%></td>
            </tr>
          <%end%>
        <%end%>
        </tbody>
      </table>
      </div>
    </div>
  </div>
<%end%>
