<%- model_class = Product -%>
<% if current_user.is_admin %>
  <%= render partial:"users/sidebar" %>
  <div class="alignment">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h5 class="panel-title"><%if @available=="true"%>Available Products<% else %>UnAvailable Products<%end%><h5>
      </div>
      <div class="panel-body">
      <table class="table table-striped table-bordered table-condensed">
        <thead>
        <tr>
          <th>Product Name</th>
          <th>Category Name</th>
          <th>Change Availability</th>
          <th>Edit</th>
          <th>Images</th>
        </tr>
        </thead>
        <tbody> 
          <%if @available == "true"%>
            <%= render :partial => 'show_available_products'%>
          <% else %>  
            <%= render :partial => 'show_unavailable_products'%>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
<%end%>
