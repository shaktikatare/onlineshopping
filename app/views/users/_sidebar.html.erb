<div class="sidebar_body">
  <div class="sidebar_content">
    <% if current_user.present? && current_user.is_admin %>
      <h5>Functions</h5>
      <div class="list-group list_style" >
        <li><%= link_to   "Add New Category", new_category_path, class:"list-group-item"  %></li>
        <li><%= link_to "Add New Product",new_product_path, class:"list-group-item"  %></li>
        <li><%= link_to "Show category",categories_path, class:"list-group-item"  %></li>
        <li><%= link_to "Show Products",products_path, class:"list-group-item"  %></li>
        <li><%= link_to "Send Email to Users",admin_email_form_users_path, class:"list-group-item"  %></li>
        <li><%= link_to "Show All Users", users_path, class:"list-group-item" %></li>
        <li><%= link_to "Search Users", search_form_users_path, class:"list-group-item" %></li>
        <li><%= link_to "Show All Orders",orders_path, class:"list-group-item" %></li>
        <li><%= link_to "Show Delivered Orders",show_delivered_orders_orders_path, class:"list-group-item" %></li>
        <li><%= link_to "Show Undelivered Orders",show_undelivered_orders_orders_path, class:"list-group-item" %></li>
        <li><%= link_to "Search Order", search_form_orders_path, class:"list-group-item" %></li>
        <li>
        <div class="btn-group btn_group_width" >
          
            <button type="button" class="list-group-item dropdown-toggle btn_style" data-toggle="dropdown">Show Users Profile 
              <span class="caret span_style"></span>
            </button>
            <ul class="dropdown-menu ul_style" role="menu">
              <li><%= link_to "Show All Users", users_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Search Users", search_form_users_path %></li>
            </ul>
            
        </div>
        </li>
        <div class="btn-group btn_group_width">
          <li>
            <button type="button" class="list-group-item dropdown-toggle btn_style" data-toggle="dropdown">
              Show Orders 
              <span class="caret span_style"></span>
            </button>
            <ul class="dropdown-menu ul_style" role="menu">
              <li><%= link_to "Show All Orders",orders_path %></li>
              <li><%= link_to "Show Delivered Orders",show_delivered_orders_orders_path %></li>
              <li><%= link_to "Show Undelivered Orders",show_undelivered_orders_orders_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Search Order", search_form_orders_path %></li>
            </ul>
          </li>  
        </div>
      </div>
    <%else%> 
      <h5>Categories</h5>
      <div class="list-group list_style">
        <%@categories.each do |c|%>
          <li><%= link_to c.name, category_path(c), :id=>"#{c.id}", class:"list-group-item"  %></li>
        <%end%>
      </div>
    <% end %>
    </div>          
  </div>
  
<% if notice.present? %>
  <p id="notice" class="alert alert-success alignment">
    <lable ><%=notice%></lable>
  </p>
<%else if flash[:partial]%>
  <p id="notice" class="alert alert-danger alignment" >
    <lable  ><%= flash[:partial] %></lable>
  </p>
  <%end%>
<%end%>


<script>
  $(document).ready(function(){
    $("#notice").fadeOut(2000); 
  });
</script>

