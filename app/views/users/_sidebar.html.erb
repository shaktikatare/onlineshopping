  <div style="background-color:#EBFAFF;margin-left:20px;width:200px;padding:10px">
    <h5>Categories</h5>
    <% if current_user.present? && current_user.is_admin %>
      <li><%= link_to   "Add New Category", new_category_path  %></li>
      <li><%= link_to "Add New Product",new_product_path %></li>
      <li><%= link_to "Show category",categories_path %></li>
      <li><%= link_to "Show Products",products_path %></li>
    <%else @category.each do |c|%>
      <li><%= link_to c.name, product_path(c), :id=>"#{c.id}" %></li>
           <%end%>
    <% end %>
    </div>          
  </div>
