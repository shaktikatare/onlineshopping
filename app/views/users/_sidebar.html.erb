<div style="margin-left:20px;width:300px;float:left">
  <div style="background-color:#E9E9EB;margin-left:20px;width:300px;min-height:500px;padding:10px">
    
    <% if current_user.present? && current_user.is_admin %>
      <h5>Functions</h5>
      <div class="list-group">
        <li><%= link_to   "Add New Category", new_category_path, class:"list-group-item"  %></li>
        <li><%= link_to "Add New Product",new_product_path, class:"list-group-item"  %></li>
        <li><%= link_to "Show category",categories_path, class:"list-group-item"  %></li>
        <li><%= link_to "Show Products",products_path, class:"list-group-item"  %></li>
        <li><%= link_to "Show Orders",orders_path, class:"list-group-item"  %></li>
      </div>
    <%else%> 
      <h5>Categories</h5>
      <div class="list-group">
        <%@category.each do |c|%>
          <li><%= link_to c.name, product_path(c), :id=>"#{c.id}", class:"list-group-item"  %></li>
        <%end%>
      </div>
    <% end %>
    </div>          
  </div>

<% if notice.present? %>
  <p id="notice" class="alert alert-success" style="width:500px; margin:0 auto;padding:20px;">
    <lable  ><%=notice%></lable>
  </p>
<%else if flash[:partial]%>
  <p id="notice" class="alert alert-danger" style="width:500px; margin:0 auto;padding:20px;">
    <lable  ><%= flash[:partial] %></lable>
  </p>
  <%end%>
<%end%>
<script>
  $(document).ready(function(){
    $("#notice").fadeOut(2000); 
  });
</script>
