<div style="background-color:#EBFAFF;margin-left:20px;width:200px;float:left">
  <div style="background-color:#EBFAFF;margin-left:20px;width:200px;padding:10px">
    <h5>Categories</h5>
    <% if current_user.present? && current_user.is_admin %>
      <li><%= link_to   "Add New Category", new_category_path  %></li>
      <li><%= link_to "Add New Product",new_product_path %></li>
      <li><%= link_to "Show category",categories_path %></li>
      <li><%= link_to "Show Products",products_path %></li>
      <li><%= link_to "Show Orders",orders_path %></li>
    <%else @category.each do |c|%>
      <li><%= link_to c.name, product_path(c), :id=>"#{c.id}" %></li>
           <%end%>
    <% end %>
    </div>          
  </div>

<% if notice.present? %>
  <p id="notice" class="alert alert-success" style="width:500px; margin:0 auto;padding:20px;">
    <lable  ><%=notice%></lable>
  </p>
<%else if flash[:partial]%>
  <p id="notice" class="alert alert-danger" style="width:500px; margin:0 auto;padding:20px;">
    <lable  ><%= flash[:partial] %></lable>
  </p>
  <%end%>
<%end%>
<script>
  $(document).ready(function(){
    $("#notice").fadeOut(2000); 
  });
</script>
