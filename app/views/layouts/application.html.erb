<!DOCTYPE html>
<html>
<head>
  <title>OnlineShopping</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<style>
  a{
    margin-right:20px;
    }    
</style>
<body>
  <div style="background-color:#463265;height:30px;padding:20px">
    <% if current_user.present?%>
      <%= link_to "signout","/users/sign_out", :method => :delete%>
      <%= link_to  "home" , current_user.is_admin ? "/users/welcome" : "/users/home" %>
      <%= link_to "UserProfile",edit_user_registration_path%>
      <div align="right"><%= link_to  "Welcome "+current_user.first_name,current_user.is_admin ? "/users/welcome" : "/users/home"%></div>
    <%else%>
      <%= link_to "signin","/users/sign_in"%>
      <%= link_to "signup","/users/sign_up"%> 
    <%end%>               
   </div>

  <p class="alert alert-success"><%= notice %></p>
  <p class="alert"><%= alert %></p>


<%= yield %>

</body>
</html>
